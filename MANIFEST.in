# SNID SAGE - MANIFEST.in
# Controls what files are included in the distribution package

# Include essential documentation
include README.md
include LICENSE
include requirements.txt
include pyproject.toml
include BUILD_CHECKLIST.md
include DIRECTORY_SCHEMA.md

# Include package data (essential only)
# Templates: only hdf5 files and json, exclude Individual_templates folder
include templates/*.hdf5
include templates/*.json
recursive-include data *.fits *.dat *.txt *.ascii
recursive-include images *.png *.ico
# recursive-include docs *.md *.rst *.txt
recursive-include custom_templates *.md

# Include all Python packages
recursive-include snid *.py
recursive-include interfaces *.py
recursive-include shared *.py
recursive-include scripts *.py

# Include configuration files
include *.cfg *.ini *.yaml *.yml

# Exclude development and test files
exclude my_API_key_OPENROUTER.txt
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude temp_test_results *
recursive-exclude snid_test_output *
recursive-exclude tests *
recursive-exclude .git *
recursive-exclude .vscode *
recursive-exclude .cursor *
recursive-exclude venv *
recursive-exclude build *
recursive-exclude dist *

# Exclude large data directories for TestPyPI
recursive-exclude Analysis/results/validation *
recursive-exclude Analysis/clustering_analysis_results *
recursive-exclude results *
recursive-exclude Analysis/results *
recursive-exclude Analysis/__pycache__ *
recursive-exclude site *

# Exclude individual template files (too many for TestPyPI)
recursive-exclude templates/Individual_templates *

# Exclude OS files
global-exclude .DS_Store
global-exclude Thumbs.db
global-exclude *.tmp
global-exclude *.temp
global-exclude *~
global-exclude *.bak 